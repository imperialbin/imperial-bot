{
    "compilerOptions": {
        "baseUrl": ".",
        "lib": ["ES6", "ESNEXT"],
        "strict": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "removeComments": false,
        "alwaysStrict": true,
        "pretty": true,
        "target": "es6",
        "sourceMap": true,
        "inlineSources": true,
        "outDir": "dist",
        "rootDir": "src",
        "esModuleInterop": true,
        "downlevelIteration": true,
        "typeRoots": ["./types", "./node_modules/@types"],
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "importHelpers": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "paths": {
            "@structures/*": ["src/structures/*"],
            "@events/*": ["src/events/*"],
            "@commands/*": ["src/slash-commands/*"],
            "@utils/*": ["src/lib/*"]
        }
    },
    "exclude": ["node_modules/**/*", "test/**/*"]
}